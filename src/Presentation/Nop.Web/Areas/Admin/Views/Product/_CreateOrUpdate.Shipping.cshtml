@model ProductModel
<style>
    .parent-setting.opened+.nested-setting .form-group>div[class^="col-md-"]+div[class^="col-md-"]:after
    ,
    .parent-setting.opened+.nested-setting .form-group:last-child div[class^="col-md-"]+div[class^="col-md-"]:before
    {
        display:  none !important;
    }
    .parent-setting.opened div+div:before {
    position: absolute;
    height: 78% !important;
    content: "" !important;
    margin-left: -6px !important;
    top: 15px !important;
    z-index: 10;
}
</style>
<div class="card-body">
    <div id="product-shipping-area"> 
         <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="IsShipEnabled" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="IsShipEnabled" />
                <span asp-validation-for="IsShipEnabled"></span>
            </div>
        </div>
    
      
        <nop-nested-setting asp-for="IsShipEnabled">
            <div class="row pr-4">
                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.Weight ? null : "advanced-setting")">
                        <div class="col-md-3">
                            <nop-label asp-for="Weight" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Weight" asp-postfix="@Model.BaseWeightIn" />
                            <span asp-validation-for="Weight"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.Dimensions ? null : "advanced-setting")">
                        <div class="col-md-3">
                            <nop-label asp-for="Length" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Length" asp-postfix="@Model.BaseDimensionIn" />
                            <span asp-validation-for="Length"></span>
                        </div>
                    </div>
                   
                </div>

                 <!-- ------------------------------- -->
                <div class="col-sm-12 col-md-6 my-2 product-input-col">
          
                    <div class="form-group row @(Model.ProductEditorSettingsModel.Dimensions ? null : "advanced-setting")">
                        <div class="col-md-3">
                            <nop-label asp-for="Width" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Width" asp-postfix="@Model.BaseDimensionIn" />
                            <span asp-validation-for="Width"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.Dimensions ? null : "advanced-setting")">
                        <div class="col-md-3">
                            <nop-label asp-for="Height" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Height" asp-postfix="@Model.BaseDimensionIn" />
                            <span asp-validation-for="Height"></span>
                        </div>
                    </div>
                </div>
                 <!-- ------------------------------- -->

                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.AdditionalShippingCharge ? null : "advanced-setting")">
                        <div class="col-md-3">
                            <nop-label asp-for="AdditionalShippingCharge" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AdditionalShippingCharge" asp-postfix="@Model.PrimaryStoreCurrencyCode" />
                            <span asp-validation-for="AdditionalShippingCharge"></span>
                        </div>
                    </div>
                
                </div>
                   

                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.DeliveryDate ? null : "advanced-setting")">
                        <div class="col-md-3">
                            <nop-label asp-for="DeliveryDateId" />
                        </div>
                        <div class="col-md-9">
                            <nop-select asp-for="DeliveryDateId" asp-items="Model.AvailableDeliveryDates" />
                            <span asp-validation-for="DeliveryDateId"></span>
                        </div>
                    </div>
                </div>
                 <!-- ------------------------------- -->

                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.FreeShipping ? null : "advanced-setting")">
                        <div class="col-md-9">
                            <nop-label asp-for="IsFreeShipping" />
                        </div>
                        <div class="col-md-3">
                            <nop-editor asp-for="IsFreeShipping" />
                            <span asp-validation-for="IsFreeShipping"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 my-2 product-input-col">
                    <div class="form-group row @(Model.ProductEditorSettingsModel.ShipSeparately ? null : "advanced-setting")">
                        <div class="col-md-9">
                            <nop-label asp-for="ShipSeparately" />
                        </div>
                        <div class="col-md-3">
                            <nop-editor asp-for="ShipSeparately" />
                            <span asp-validation-for="ShipSeparately"></span>
                        </div>
                    </div>
                </div>
                 <!-- ------------------------------- -->

            </div>

        </nop-nested-setting>
    </div>
</div>