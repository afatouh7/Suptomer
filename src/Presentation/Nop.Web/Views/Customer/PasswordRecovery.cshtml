@model PasswordRecoveryModel
@{
    Layout = "_RgistrationLayout";
    NopHtml.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    NopHtml.AppendPageCssClassParts("html-password-recovery-page");
}

<style>
    .footer-container {
        display: none !important;
    }

    .required {
        position: absolute;
        left: -14px;
        top: 3px;
    }

    .reg_form {
        overflow-y: unset;
    }
</style>

<div class="container-fluid h-100">
    <nav class="navbar fixed-top d-flex bg-white">
        <div class="container">
            <div class="row w-100 justify-content-center align-items-center">
                <div class="col-6">
                    <!-- Image Logo -->
                    <a class="navbar-brand logo-image ml-2  websiteBrand" href="/Home">
                        <img src="@Url.Content("../Themes/SuptomerTheme/Content/assets/img/logo_dark.png")" alt="suptomer" />
                    </a>
                </div>
                <div class="col-6 text-right">

                    <div class="">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="languageToggle">
                            <label class="custom-control-label" for="languageToggle">AR - EN</label>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container h-100 ">
        <div class="row h-100 d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <form asp-route="PasswordRecovery" class="w-100 theme_form reg_form pl-4" method="post">
                        <div asp-validation-summary="ModelOnly" class="message-error"></div>
                        <h1 class="register" style="margin-bottom: 0!important">
                            @T("Account.PasswordRecovery")
                        </h1>
                        <div class="fieldset">
                            <p>
                                <strong>@T("Account.PasswordRecovery.Tooltip")</strong>
                            </p>
                            <div class="form-group">
                                <div class="">
                                    <label asp-for="Email" asp-postfix=":"></label>
                                    <input class="form-control" asp-for="Email" class="email" />
                                    <nop-required />
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            @if (Model.DisplayCaptcha)
                            {
                                <nop-captcha />
                            }
                        </div>
                        <div class="buttons">
                            <button type="submit" name="send-email" class="theme_btn  text-white mt-3 w-100 text-center">@T("Account.PasswordRecovery.RecoverButton")</button>
                        </div>
                    </form>
                </div>
            </div>


            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <img src="@Url.Content("../Themes/SuptomerTheme/Content/assets/img/reg_right_img.png")" alt="login suptoer Image" class="i mw-70">
            </div>
        </div>
    </div>

</div>