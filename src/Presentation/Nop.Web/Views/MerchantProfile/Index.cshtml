<script>
    function readURL(input, containerId) {
        if (input.files && input.files[0]) {
            for (var i = 0; i < input.files.length; i++) {
                var reader = new FileReader();
                const name = input.files[i].name;
                const lastDot = name.lastIndexOf('.');
                const ext = name.substring(lastDot + 1);

                reader.onload = function (e) {
                    console.log(e.target);
                    var elem = document.createElement("img");
                    if (ext == "pdf") {
                        elem.setAttribute("src", "/images/pdf-icon.png");
                    }
                    else if (ext == "doc" || ext == "docx") {
                        elem.setAttribute("src", "/images/word-icon.png");
                    }
                    else {
                        elem.setAttribute("src", e.target.result);
                    }

                    elem.setAttribute("width", "100");
                    //elem.setAttribute("height", "100");
                    elem.setAttribute("class", "col-2 mb-2");
                    document.getElementById(containerId).appendChild(elem);
                }
                reader.readAsDataURL(input.files[i]);
            }
        }
    }

    $("#SupplierDocs").change(function () {
        readURL(this, "supplierFilesUploadPreview");
    });

    $("#SupplierNationalId").change(function () {
        readURL(this, "supplierNationalIdPreview");
    });

